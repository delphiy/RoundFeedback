<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.roundfeedback.MainActivity$PlaceholderFragment"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:padding="2dp"
        >

        <TextView
            android:id="@+id/round_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_big_size"
            android:paddingBottom="5dp"
            android:text="Round 1"

            android:layout_gravity="center"


            />

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorBlack"
            android:id="@+id/graph" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            >

            <TextView
                android:id="@+id/section_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Punches"
                android:paddingLeft="25dp"

                />

            <TextView
                android:id="@+id/section_labe2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Speed(avg)"
                android:paddingLeft="25dp"
                />
            <TextView
                android:id="@+id/section_labe3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Power(avg)"
                android:paddingLeft="25dp"

                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/lab_punch_Count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="24dp"
                android:text="56"
                android:paddingLeft="25dp"

                />
            <ImageView
                android:id="@+id/img_punch_Count_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/arrow_up" />


            <TextView
                android:id="@+id/lab_average_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="16.4"
                android:textSize="24dp"
                android:paddingLeft="25dp"


                />

            <ImageView
                android:id="@+id/img_average_speed_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/arrow_up" />

            <TextView
                android:id="@+id/lab_average_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="12.5"
                android:textSize="24dp"
                android:paddingLeft="55dp"

                />

            <ImageView
                android:id="@+id/img_average_power_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/arrow_up" />

        </LinearLayout>






            <TextView
                android:id="@+id/section_labe7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:text="Type Breakdown"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:paddingTop="5dp"
                />





        <!-- breaks down the athleteâ€™s punches -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:paddingLeft="15dp"
            >


            <TextView
                android:id="@+id/Lab_left_punches_jab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreen"
                android:textSize="16dp"
                android:text="6"

                />

            <ProgressBar
                android:id="@+id/progress_left_punches_jab"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:progressTint="@color/colorGreen"
                />



            <TextView
                android:id="@+id/section_labe9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreen"
                android:textSize="16dp"
                android:paddingLeft="30dp"
                android:text="J"
                />

            <TextView
                android:id="@+id/section_labe10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlue"
                android:textSize="16dp"
                android:text="C"
                android:paddingLeft="30dp"

                />


            <ProgressBar
                android:id="@+id/progress_right_punches_cross"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:progressTint="@color/colorBlue"
                />


            <TextView
                android:id="@+id/Lab_right_punches_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlue"
                android:textSize="16dp"
                android:paddingLeft="30dp"
                android:text="4"
                />

        </LinearLayout>
        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:paddingLeft="15dp"
            >


            <TextView
                android:id="@+id/Lab_left_punches_hook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreen"
                android:textSize="16dp"
                android:text="5"

                />

            <ProgressBar
                android:id="@+id/progress_left_punches_hook"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:progressTint="@color/colorGreen"
                />


            <TextView
                android:id="@+id/section_labe13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreen"
                android:textSize="16dp"
                android:paddingLeft="30dp"
                android:text="H"
                />

            <TextView
                android:id="@+id/section_labe14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlue"
                android:textSize="16dp"
                android:text="H"
                android:paddingLeft="30dp"
                />

            <ProgressBar
                android:id="@+id/progress_right_punches_hook"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:progressTint="@color/colorBlue"
                />

            <TextView
                android:id="@+id/Lab_right_punches_hook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlue"
                android:textSize="16dp"
                android:paddingLeft="30dp"
                android:text="2"
                />

        </LinearLayout>
        <!-- ######### -->
        <!-- Third Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:paddingLeft="15dp"
            >


            <TextView
                android:id="@+id/Lab_left_punches_uppercut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreen"
                android:textSize="16dp"
                android:text="2"

                />


            <ProgressBar
                android:id="@+id/progress_left_punches_uppercut"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:progressTint="@color/colorBlue"
                />



            <TextView
                android:id="@+id/section_labe17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreen"
                android:textSize="16dp"
                android:paddingLeft="30dp"
                android:text="U"

                />


            <TextView
                android:id="@+id/section_labe18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlue"
                android:textSize="16dp"
                android:text="U"
                android:paddingLeft="30dp"
                />

            <ProgressBar
                android:id="@+id/progress_right_punches_uppercut"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:progressTint="@color/colorBlue"
                />

            <TextView
                android:id="@+id/Lab_right_punches_uppercut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlue"
                android:textSize="16dp"
                android:paddingLeft="30dp"
                android:text="3"
                />

        </LinearLayout>


        <!--########################    Footer        ####################-->



            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lab_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:53"
                android:textColor="@color/colorGreen"
                android:textSize="16dp"

                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:onClick="resetRound"
                android:text="Reset"
                android:textColor="@color/colorGreen"
                android:textSize="16dp" />


        </LinearLayout>



        <!--########################  End  Footer        ####################-->
    </LinearLayout>
</android.support.constraint.ConstraintLayout>